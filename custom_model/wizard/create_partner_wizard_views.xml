<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_create_partner_wizard_form" model="ir.ui.view">
        <field name="name">create.partner.wizard.form</field>
        <field name="model">create.partner.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Partner">
                <group>
                    <field name="name"/>
                    <field name="is_company"/>
                </group>
                <footer>
                    <button name="action_create_partner" 
                            string="Create" 
                            type="object" 
                            class="btn-primary"/>
                    <button name="action_cancel" 
                            string="Cancel" 
                            type="object" 
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_create_partner_wizard" model="ir.actions.act_window">
        <field name="name">Create Partner</field>
        <field name="res_model">create.partner.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>




